<%- include("header") %>
<style>
    .nav{
        display: none;
    }
</style>
<div class="content">
    <div class="wrapper">
        <h2>Prioritize Tasks and Get Things Done</h2>
        <p>Maintain a structured approach to stay on track</p>
        <ul id="categoryTrophy">
            <li>Stay Focused and<br> Achieve Your Dreams.</li>
        </ul>
    </div>
    <div id="categories" class="section-box">
        <h2>Categories</h2>
        <ul class="category-item">
        <% categories.forEach(category =>{ %>
            <li class="category-li">
                <a class="navbar-brand categoryLink" href="/categories/<%= category.name %>"><%= category.name %></a>
                <form action="/delete/<%= category.name %>" method="post" class="delete-category-form">
                  <input type="hidden" name="categoryId" value="<%= category._id %>">
                  <input type="hidden" name="categoryName" value="<%= category.name %>">
                  <button id="delete-icon" type="submit">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#A683E3" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 
                        0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 
                        8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 
                        0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                    </svg>
                  </button>
                </form>
            </li>
        <% }) %>
        </ul>
        <form class="item" action="/categories" method="post">
            <input type="text" name="newCategory" placeholder="New Category" autocomplete="off">
            <button type="submit" name="list">+</button>
        </form>
    </div>
    
</div>

<%- include("footer") %>